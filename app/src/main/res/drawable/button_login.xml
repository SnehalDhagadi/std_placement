<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>

                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#5787C1" android:startColor="#5787C1" />
                    <stroke android:width="1dp" android:color="#5787C1" />
                    <corners
                        android:bottomLeftRadius="1000dp"
                        android:bottomRightRadius="1000dp"
                        android:radius="60dp"
                        android:topLeftRadius="1000dp"
                        android:topRightRadius="1000dp"/>
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>